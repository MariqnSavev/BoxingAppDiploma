@model IEnumerable<BoxingAppDiploma.Models.Training>

@{
    ViewData["Title"] = "Trainings";
}

<h1>Trainings</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Training</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Description</th>
            <th>Duration (minutes)</th>
            <th>Calories Burned</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var training in Model)

        {
            <tr>
                <td>@training.Date.ToString("yyyy-MM-dd")</td>
                <td>@training.Description</td>
                <td>@training.DurationMinutes</td>
                <td>@training.CaloriesBurned</td>
            </tr>
        }
    </tbody>
</table>