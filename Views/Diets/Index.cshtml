@model IEnumerable<PowerTracker.Models.Diet>

<h1>Diet Records</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Record</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Food</th>
            <th>Quantity (g)</th>
            <th>Calories</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var diet in Model)
        {
            <tr>
                <td>@diet.FoodName</td>
                <td>@diet.QuantityInGrams</td>
                <td>@diet.Calories</td>
                <td>@diet.Date.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@diet.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@diet.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
