@model PowerTracker.Models.Diet

<h1>Edit Diet Record</h1>

<form asp-action="Edit" method="post">
    <!-- Hidden field for ID -->
    <input type="hidden" asp-for="Id" />

    <!-- Dropdown for Food Selection -->
    <div class="form-group">
        <label asp-for="FoodName">Select Food</label>
        <select asp-for="FoodName" asp-items="ViewBag.FoodList" class="form-control"></select>
        <span asp-validation-for="FoodName" class="text-danger"></span>
    </div>

    <!-- Input for Quantity -->
    <div class="form-group">
        <label asp-for="QuantityInGrams">Quantity (in grams)</label>
        <input asp-for="QuantityInGrams" class="form-control" />
        <span asp-validation-for="QuantityInGrams" class="text-danger"></span>
    </div>

    <!-- Display Calculated Calories -->
    <div class="form-group">
        <label asp-for="Calories">Total Calories</label>
        <input asp-for="Calories" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
